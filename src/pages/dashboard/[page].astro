---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import { getSession } from "auth-astro/server";
import Logout from "../../components/Logout.astro";
import LevelsContainer from "../../components/LevelsContainer.astro";

const session = await getSession(Astro);
if (!session) {
    return Astro.redirect("/login");
}
const userID = session.user?.id as string;
const userName = session.user?.name as string;

const { page } = Astro.params;
if (page === undefined) throw Error("A page number must be specified.");
const parsedPage = parseInt(page); // TODO: error handling
---

<BaseLayout>
    <upload-section data-user={userID}>
        <div class="container">
            <Header authenticated={!!session} />
            <main>
                <h1>Dashboard</h1>
                <div class="userCard">
                    <img src={session.user?.image} />
                    <div class="info">
                        <h2>{userName}</h2>
                        <a href="/dashboard/account">Manage account</a>
                        <Logout />
                    </div>
                </div>
                <form data-upload>
                    <input type="file" name="file" accept=".zip" />
                    <button type="submit">Upload</button>
                </form>
                <LevelsContainer
                    page={parsedPage}
                    root="/dashboard/"
                    session={session}
                    inDashboard={true}
                />
            </main>
        </div>
    </upload-section>
</BaseLayout>
<script src="./index.ts"></script>

<style lang="scss">
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    main {
        margin: auto;
        flex-grow: 1;

        // I want to preserve the semantic `main` here, so we're nesting into flex
        // again for `.levelsContainer` to take only the remaining height
        display: flex;
        flex-direction: column;
    }

    .userCard {
        max-width: 80ch;
        display: flex;
        margin-bottom: 1rem;

        img {
            width: calc(24px * 3 + 8px);
            margin: 0.5rem;
            border: 2px solid black;
        }

        .info {
            font-size: 24px;

            a {
                color: black;
                display: block;
            }
        }
    }
</style>
