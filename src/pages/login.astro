---
import BaseLayout from "../layouts/BaseLayout.astro";
import PixelarticonsGithub from "~icons/pixelarticons/github";
import { getSession } from "auth-astro/server";

const session = await getSession(Astro);

if (session) {
    return Astro.redirect("/dashboard/1");
}
---

<BaseLayout>
    <div class="container">
        <header>
            <h1><a href="/">Cranky's Cloud</a></h1>
        </header>
        <main>
            <div class="signupContainer">
                <button id="github">
                    <PixelarticonsGithub />
                    Sign in with GitHub
                </button>
                <button id="discord">
                    <!-- TODO: discord icon - pixelarticons does not have this. -->
                    Sign in with Discord
                </button>
            </div>
            <p>
                By registering, you agree to the
                <a href="/tos">Terms of Service</a> and the
                <a href="/privacy">Privacy policy</a>. (We do not sell your data)
            </p>
        </main>
    </div>
</BaseLayout>

<script>
    import { signIn } from "auth-astro/client";
    const githubLoginButton = document.querySelector("#github")!;
    const discordLoginButton = document.querySelector("#discord")!;

    githubLoginButton.addEventListener("click", () => signIn("github"));
    discordLoginButton.addEventListener("click", () => signIn("discord"));
</script>

<style lang="scss">
    .container {
        padding-top: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;

        width: 100%;
        height: 100%;
    }

    header {
        margin-bottom: 1rem;

        a {
            color: black;
            cursor: pointer;
        }
    }

    main {
        max-width: 40ch;
        min-width: 40ch;

        display: flex;
        justify-content: center;
        flex-direction: column;

        gap: 0.5rem;

        p {
            font-size: 24px;
            color: #444;
            text-align: center;

            a {
                color: black;
            }
        }
    }

    .signupContainer {
        border: 2px solid black;
        padding: 1rem;
        padding-left: 2rem;
        padding-right: 2rem;

        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;

        button {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 0.5rem;

            // TODO: this is such a bland design - can we do better?
            border: 2px solid black;
            background-color: white;
            cursor: pointer;
        }
    }
</style>
