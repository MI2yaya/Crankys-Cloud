{
    "name": "frontend",
    "type": "module",
    "version": "0.0.1",
    "scripts": {
        "dev": "cross-env NODE_ENV=dev astro dev",
        "build": "astro build",
        "astro": "astro",
        "preview": "wrangler dev",
        "deploy": "wrangler deploy",
        "format": "pnpm exec prettier . --write",
        "wrangler:types": "wrangler types src/worker.d.ts",
        "db:generate": "drizzle-kit generate",
        "db:migrate:local": "wrangler d1 migrations apply prod-d1 --local",
        "db:studio": "drizzle-kit studio",
        "wdev": "pnpm run build && pnpm run preview",
        "wdev-host": "pnpm run build && wrangler dev --ip 127.0.0.1 --port 4321"
    },
    "dependencies": {
        "@astrojs/cloudflare": "^12.6.4",
        "@auth/core": "^0.37.4",
        "@libsql/client": "^0.15.12",
        "astro": "^5.13.2",
        "auth-astro": "^4.2.0",
        "drizzle-orm": "^0.44.4",
        "sass": "^1.90.0"
    },
    "devDependencies": {
        "@auth/d1-adapter": "^1.10.0",
        "@auth/drizzle-adapter": "^1.10.0",
        "@iconify-json/pixelarticons": "^1.2.2",
        "cross-env": "^10.0.0",
        "dotenv": "^17.2.1",
        "drizzle-kit": "^0.31.4",
        "nanoid": "^5.1.5",
        "prettier": "3.6.2",
        "prettier-plugin-astro": "0.14.1",
        "tsx": "^4.20.4",
        "unplugin-icons": "^22.2.0",
        "wrangler": "^4.31.0"
    }
}
